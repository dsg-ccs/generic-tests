VPATH=../generic-tests
GCC=gcc
TESTS = $(wildcard ${VPATH}/*.c)
SCRIPTS = $(wildcard ${VPATH}/*.sh)
all:	$(TESTS:${VPATH}/%.c=%-dyn) $(TESTS:${VPATH}/%.c=%-stat) scripts

scripts: ${SCRIPTS}
	 cp ${SCRIPTS} .

%-dyn:	%.c
	${GCC} -g $< -o $@
%-stat:	%.c
	${GCC} -g --static $< -o $@

clean:
	rm *-dyn
	