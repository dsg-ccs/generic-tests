VPATH=../generic-tests
GCC=aarch64-linux-gnu-gcc
TESTS = $(wildcard ${VPATH}/*.c)
SCRIPTS = $(wildcard ${VPATH}/*.sh)
all:	$(TESTS:${VPATH}/%.c=%-dyn) $(TESTS:${VPATH}/%.c=%-stat)

scripts: ${SCRIPTS}
	 cp ${SCRIPTS} .

%-dyn:	%.c
	${GCC} $< -o $@
%-stat:	%.c
	${GCC} --static $< -o $@

clean:
	rm *-dyn
	rm *-stat	